{{template "base" .}}

{{define "content"}}
       <div class="card mb-4">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h4 class="card-title mb-0">Accounts</h4>
                                <a class="btn btn-primary btn-sm" href="/customers/add">New Account</a >
                            </div>
                            <div class="card-body">
                                <table id="datatablesSimple">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>First Name</th>
                                            <th>Last Name</th>
                                            <th>Account Type</th>
                                            <th>Balance</th>
                                         
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                  
                                    <tbody>
                                
                                    {{$accounts := index .Data "accounts"}}
                                    {{range $accounts}}
                                     <tr>
                                        <td>{{.ID}}</td>
                                        <td>{{.User.FirstName}}</td>
                                        <td>{{.User.LastName}}</td>
                                        <td>{{.AccountType}}</td>
                                        <td>{{.Amount}}</td>
                                        <td>
                                        <div class="btn-group" role="group" aria-label="Basic outlined example">
                                            <a class="btn btn-outline-primary">View</a>
                                            <a href= "/account/{{.ID}}" class="btn btn-outline-primary">Edit</a>
                                            <button onclick="" class="btn btn-outline-danger">Delete</button>
                                            </div>     
                                        </td>
                                            
                                    </tr>
                                    {{end}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
{{end}}

 